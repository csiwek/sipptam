<?xml version="1.0" encoding="utf-8" ?>
<sipptam scenarioPath="/etc/sipptam/scenarios/*.xml">

   <!-- Mandatory. ta slaves to use. -->
   <tas host="10.22.22.200" port="5000" jobs="2"/>
   <tas host="10.22.22.201" port="5001" jobs="2"/>
   <tas host="10.22.22.202" port="5001" jobs="4"/>
   <tas host="10.22.22.202" port="5002" jobs="4"/>

   <!-- Mandatory. Test to run. -->
   <testrun regex="(.*-000.*)" 
	    configlink="conf1"/>

   <testrun regex="(.*-001.*)"
	    configlink="conf1"
	    modlink="two"/>
   <testrun regex="(.*)"
	    configlink="conf2"
	    modlink="one"/>

   <!-- Mandatory (Min 1 config). Configs used by testruns. -->
   <config id="conf1"
	   pause="1.0"
	   ratio="1;5"
	   max="10;50"
	   execMode="serial"
	   tries="1"/>

   <config id="conf2"
	   pause="1.0"
	   ratio="1;5"
	   max="10;50"
	   execMode="parallel"
	   tries="1"/>

   <config id="conf3"
	   pause="20.0"
	   ratio="5;10"
	   max="100;200"
	   execMode="serial"
	   tries="1"/>

   <config id="conf4"
	   pause="20.0"
	   ratio="5;10"
	   max="100;200"
	   execMode="parallel"
	   tries="1"/>

   <!-- Optional. Modifications that might be applied by a testrun. -->
   <mod id="one">
     <replace regex="(.*_a.xml)" src="__tmp1a__" dst="tmp1a"/>
     <fieldsf regex="(.*_a.xml)" f="path_to_file"/>
   </mod>

   <mod id="two">
     <replace regex="(.*_a.xml)" src="__tmp1a__" dst="tmp1a"/>
     <replace regex="(.*_b.xml)" src="__tmp1a__" dst="tmp1a"/>
     <fieldsf regex="(.*_a.xml)" f="path_to_file"/>
     <fieldsf regex="(.*_b.xml)" f="path_to_file"/>
   </mod>

   <!-- Mandatory. Change in case you know what you're doing. -->
   <!-- * logLevel         : {debug, info, warning, error, critical} -->
   <!-- * scenarioMaxN     : Max number of scenarios allowed -->
   <!-- * scenarioValidate : Validates XML syntax of scenarios -->
   <!-- * regexValidate    : Validates all the used regexs -->
   <advanced logLevel="info"
	     scenarioMaxN="2000"
	     scenarioValidate="True"
	     regexValidate="True"/>
</sipptam>
