<?xml version="1.0" encoding="utf-8" ?>
<sipptam  scenarioPath="/etc/sipptam/scenarios/*.xml">

   <!-- Mandatory. ta slaves to use. -->
   <tas host="10.22.22.200" port="5000" jobs="2"/>
   <tas host="10.22.22.201" port="5001" jobs="2"/>
   <tas host="10.22.22.202" port="5002" jobs="4"/>

   <!-- Mandatory. Test to run. -->
   <test regex="(.*-000.*)" 
	 pause="5.0"  
	 paramR="1"    
	 paramM="1"
         execMode="serial"   
	 tries="2"  
	 mod="one"/>
   <test regex="(.*-001.*)" 
	 pause="20.0" 
	 paramR="5;10"
	 paramM="100;200"
         execMode="parallel" 
	 tries="2"
	 mod="two"/>
   <test regex="(.*)"      
	 pause="10.0"
	 paramR="1"    
	 paramM="1;20;40;80"
         execMode="serial"   
	 tries="1"
	 mod="two"/>

   <!-- Optional. Modifications that might be applied by a test. -->
   <modification id="one">
     <replace regex="(.*_a.xml)" src="__tmp1a__" dst="tmp1a"/>
     <fieldsf regex="(.*_a.xml)" f="path_to_file"/>
     <fieldsf regex="(.*_b.xml)" f="path_to_file"/>
   </modification>
   
   <modification id="two">
     <replace regex="(.*_a.xml)" src="__tmp1a__" dst="tmp1a"/>
     <fieldsf regex="(.*_a.xml)" f="path_to_file"/>
     <fieldsf regex="(.*_b.xml)" f="path_to_file"/>
   </modification>
   
   <!-- Mandatory. Change in case you know what you're doing. -->
   <!-- * logLevel         : {debug, info, warning, error, critical} -->
   <!-- * scenarioMaxN     : Max number of scenarios allowed -->
   <!-- * scenarioMaxSize  : Max size (Bytes) allowed for each scenario -->
   <!-- * scenarioValidate : Validates well formed scenarios -->
   <!-- * regexValidate    : Validates well formed regexs -->
   <advanced logLevel="info"
	     scenarioMaxN="30"
	     scenarioMaxSize="2000"
	     scenarioValidate="True"
	     regexValidate="True"/>
</sipptam>
