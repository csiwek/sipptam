<?xml version="1.0" encoding="utf-8" ?>
<sipptam>

   <!-- Mandatory. ta slaves to use. -->
   <tas host="10.22.22.200" port="5000" jobs="15"/>
   <tas host="10.22.22.201" port="5001" jobs="15"/>

   <!-- Mandatory. Test to run. -->
   <testrun id="test-000"
	    scenarioPath="/etc/sipptam/scenarios/*000_a.xml"
	    configlink="simple"/>

   <testrun id="test-001"
	    scenarioPath="/etc/sipptam/scenarios/*000_b.xml"
	    configlink="simple"
	    modlink="one"/>

   <testrun id="test-notfound"
	    scenarioPath="/etc/sipptam/scenarios/*notfound*.xml"
	    configlink="simple2"
	    modlink="two"/>

   <testrun id="test-002"
	    scenarioPath="/etc/sipptam/scenarios/*.xml"
	    configlink="simple"
	    modlink="two"/>

   <testrun id="test-003"
	    scenarioPath="/etc/sipptam/scenarios/*.xml"
	    configlink="simple"
	    modlink="two"/>

   <!-- Mandatory (Min 1 config). Configs used by testruns. -->
   <config id="simple"
	   pause="1.0"
	   ratio="1;5"
	   max="10;50"
	   tries="1"/>

   <config id="advanced"
	   pause="1.0"
	   ratio="1;5"
	   max="10;50"
	   tries="1"/>

   <config id="advanced_toremove"
	   pause="1.0"
	   ratio="1;5"
	   max="10;50"
	   tries="1"/>

   <config id="advanced_toremove2"
	   pause="1.0"
	   ratio="1;5"
	   max="10;50"
	   tries="1"/>

   <!-- Optional. Modifications that might be applied by a testrun. -->
   <mod id="one">
     <replace regex="(.*_a.xml)" src="__tmp1a__" dst="tmp1a"/>
     <fieldsf regex="(.*_a.xml)" f="path_to_file"/>
   </mod>

   <mod id="two">
     <replace regex="(.*_aaa1.xml)" src="__tmp1a__" dst="tmp1a"/>
     <replace regex="(.*_bbb1.xml)" src="__tmp1a__" dst="tmp1a"/>
     <fieldsf regex="(.*_aaa2.xml)" f="path_to_file"/>
     <fieldsf regex="(.*_bbb2.xml)" f="path_to_file"/>
   </mod>

   <!-- Mandatory. Change in case you know what you're doing. -->
   <!-- * logLevel         : {debug, info, warning, error, critical} -->
   <!-- * execMode         : {serial, parallel} -->
   <!-- * scenarioValidate : Validates XML syntax of scenarios -->
   <!-- * regexValidate    : Validates all the used regexs -->
   <advanced logLevel="info"
	     execMode="serial"
	     scenarioValidate="True"
	     regexValidate="True"/>
</sipptam>
